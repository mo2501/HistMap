{% extends "HistoryBundle:History:base.html.twig" %}

{% block content %}
    <div id="map">

    </div>

    <div class="showbox">
        <div class="loader">
            <img src="/public/images/gears.gif">
        </div>
    </div>

    <div class="slider-wrapper">
        <div class="title-site">
            <a href="">
                <i class="fa fa-globe"></i> Hist Map
            </a><br>
            La carte historique collaborative
        </div><!--
     --><div>
            <input type="text" id="input-from">
        </div><!--
        --><div id="slider-range"></div><!--
     --><div>
            <input type="text" id="input-to">
        </div>
        <div class="div-gender-filter">
            {% for key, gender in genders %}
                <span class="checkbox">
                    <label for="{{ gender }}">
                        <input class="filter-activator" checked="checked" type="checkbox" name="{{ gender }}" value="true" id="{{ gender }}">
                        {{ key }}
                    </label>
                </span>
            {% endfor %}
        </div>
        <div class="div-event-type-filter">
            {% for key, eventType in eventTypes %}
                <span class="checkbox">
                    <label for="{{ eventType.nom }}">
                        <input class="filter-activator eventType" checked="checked" type="checkbox" name="{{ eventType.nom }}" value="{{ eventType.id }}" id="{{ eventType.nom }}">
                        {{ eventType.nom }}
                    </label>
                </span>
            {% endfor %}
        </div>
        <div class="div-name-filter">
            <input type="text" name="person-name" id="person-name" placeholder="Ex : NapolÃ©on Bonaparte">
        </div>
        <div class="div-submit-search">
            <button type="submit" class="btn btn-info">
                <i class="fa fa-search" aria-hidden="true"></i> Rechercher
            </button>
        </div>
    </div>
