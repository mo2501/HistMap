        <link rel="stylesheet" href="https://code.jquery.com/ui/jquery-ui-git.css">
        
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        
        <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
        
        {% stylesheets
                "@HistoryBundle/Resources/css/global.css"
        %}<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}

        {% if app.request.attributes.get('_route') in ["history_histlink", "history_histlink_personne", "history_histlink_suggestion"] %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/vis/4.17.0/vis.min.js"></script>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/vis/4.17.0/vis.min.css">
            {% stylesheets
            "@HistoryBundle/Resources/css/histlink.css"
            %}<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endif %}
        
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
        
        <meta name="keywords" content="carte, historique, collaboratif, personnage, histoire, evenement">
        <meta name="contact" content="berkani.lyes@gmail.com" />

        <meta property="og:title" content="Hist Map: La carte historique collaborative" >
        <meta property="og:url" content="{{ app.request.schemeAndHttpHost ~ app.request.requestUri }}">
        <meta property="og:type" content="website" >
        {% if app.request.attributes.get('_route') in ["history_histlink", "history_histlink_personne", "history_histlink_suggestion"] %}
            <meta property="og:image" content="{{ app.request.getSchemeAndHttpHost() }}/public/personne/1324254325.jpg">
            <meta property="og:title" content="Hist Link: Le réseau historique collaboratif" >
            <meta name="description" content="Hist Link est un projet de réseau historique collaboratif regroupant un ensemble de personnalités historiques connues ainsi que les liens qui les unissent entre elles."/>
            <meta name="og:description" content="Hist Link est un projet de réseau historique collaboratif regroupant un ensemble de personnalités historiques connues ainsi que les liens qui les unissent entre elles."/>
        {% else %}
            <meta property="og:image" content="{{ app.request.getSchemeAndHttpHost() }}/public/personne/0987654321.jpg">
            <meta property="og:title" content="Hist Map: La carte historique collaborative" >
            <meta name="description" content="Hist Map est une carte historique collaborative référençant les personnalités par événements et dates."/>
            <meta name="og:description" content="Hist Map est une carte historique collaborative référençant les personnalités par événements et dates."/>
        {% endif %}
    </head>
    <body>
        <div class="wrapper">
            
            {% block content %}{% endblock %}
            
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
            <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
