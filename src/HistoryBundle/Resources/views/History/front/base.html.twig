            <script>
                {% if app.request.attributes.get('_route') == 'history_homepage' %}
                    setTimeout(function(){
                        $.getScript("/oms/oms.min.js", function(){
                        });
                    }, 500);
                {% endif %}
            </script>
            {% javascripts
            '@HistoryBundle/Resources/js/global.js'
            %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}

            {% if app.request.attributes.get('_route') in ["history_histlink", "history_histlink_personne", "history_histlink_suggestion"] %}
                <script src="/raphael/raphael.min.js"></script>
                {% javascripts
                '@HistoryBundle/Resources/js/histlink.js'
                %}
                <script src="{{ asset_url }}"></script>
                {% endjavascripts %}
            {% endif %}

        </div>  
    </body>
</html>